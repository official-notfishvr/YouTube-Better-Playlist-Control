{
    "manifest_version": 3,
    "name": "YouTube Better Playlist Control",
    "version": "1.0",
    "description": "gives a better control over YouTube playlist panel",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "result.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}